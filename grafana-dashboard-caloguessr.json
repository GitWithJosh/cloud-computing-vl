        },
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 8},
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        }
      },
