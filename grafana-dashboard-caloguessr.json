      {
        "id": 7,
        "title": "Pod Resource Usage Summary",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_container_resource_requests{namespace=\"default\", pod=~\"caloguessr.*\", resource=\"cpu\"})",
            "legendFormat": "CPU Requests",
            "refId": "A"
